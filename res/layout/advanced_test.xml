<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/bg_frag_cl">
    
    <TableLayout 
        style="@style/Fill_Wrap">
        <TableRow
            style="@style/Fill_Wrap"
            android:gravity="center">
            <LinearLayout 
                android:id="@+id/onChoiseSubject_av"
                android:clickable="true"
                style="@style/Detail_liner_2cols">
                <TextView
                    style="@style/Detail_text_view"
                    android:text="@string/subject"/>
                <TextView 
                    style="@style/Saperator"/>
                <TextView
                    android:id="@+id/subject_av"
                    style="@style/Detail_text_view"
                    android:text="@string/math"/>
            </LinearLayout>
            <TextView 
                    style="@style/Saperator"/>
            <LinearLayout 
                style="@style/Detail_liner_2cols">
                <TextView 
                    style="@style/Detail_text_view"
                    android:text="@string/code"/>
                <TextView 
                    style="@style/Saperator"/>
                <TextView 
                    android:id="@+id/code_av"
                    style="@style/Detail_text_view"
                    android:text="@string/md"/>
            </LinearLayout>           
        </TableRow>
        <TableRow
            style="@style/Fill_Wrap"
            android:gravity="center">
            <LinearLayout 
                style="@style/Detail_liner_2cols">
                <TextView 
                    style="@style/Detail_text_view"
                    android:text="@string/time"/>
                <TextView 
                    style="@style/Saperator"/>
                <TextView 
                    android:id="@+id/time_av"
                    style="@style/Detail_text_view"
                    android:text="@string/tg"/>
            </LinearLayout>
            <TextView 
                    style="@style/Saperator"/>
            <LinearLayout 
                android:id="@+id/onChoiseSuggest_av"
                android:clickable="true"
                style="@style/Detail_liner_2cols">
                <TextView 
                    style="@style/Detail_text_view"
                    android:text="@string/suggest"/>
                <TextView 
                    style="@style/Saperator"/>
                <TextView 
                    android:id="@+id/suggest_av"
                    style="@style/Detail_text_view"
                    android:text="@string/yes"/>
            </LinearLayout>     
        </TableRow>
    </TableLayout>
    
    <LinearLayout
		android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/detail_hr_cl">       
    </LinearLayout>

    <LinearLayout
		style="@style/Liner_2Button"> 
		<LinearLayout 
		    android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="0.8"
        	android:gravity="right">
		    <Button 
		        android:id="@+id/bt_choise_subject_av"
		        style="@style/Button_Style"
		        android:drawableTop="@drawable/chon_mon"
		        android:text="@string/choise_subject"/>
		</LinearLayout>
        
		<TextView 
		    style="@style/Saperator"/>
		
		<LinearLayout
		    android:layout_width="0dp"
        	android:layout_height="match_parent"
        	android:layout_weight="0.8"
        	android:gravity="left">
		    <Button 
		        android:id="@+id/bt_start_av"
		        style="@style/Button_Style"
		        android:drawableTop="@drawable/start"
		        android:text="@string/start_test"/>
		</LinearLayout>	
    </LinearLayout>
    
    
    <TextView 
        android:id="@+id/note_advanced_test"
        style="@style/Text_Note"
        android:clickable="true"
        android:text="@string/note_advanced_test"
        />
    	
</LinearLayout>