<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:gradientRadius="0.3"
                android:centerColor="#ff8c00"
                android:startColor="#FFFFFF"
                android:endColor="#FFFFFF"
                />
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <size 
                android:width="60dp"
                android:height="30dp"
                />
            <solid 
                android:color="#fff"
            />
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>